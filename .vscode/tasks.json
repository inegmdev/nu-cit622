{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (in container)",
            "type": "shell",
            "command": "make -C ${workspaceFolder}/Project/External build"
        },
        {
            "label": "prepare to debug",
            "type": "shell",
            "command": "make -C ${workspaceFolder}/Project/External run",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run the debugging server",
            "type": "shell",
            "command": "make -C ${workspaceFolder}/Project/External debug",
            "group": "build",
            "problemMatcher": []
        }
    ]
}